# FinGuard Capstone environment variables
# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TRANSACTIONS_TOPIC=finguard.transactions
KAFKA_DECISIONS_TOPIC=finguard.decisions
KAFKA_ALERTS_TOPIC=finguard.alerts
KAFKA_CONSUMER_GROUP=finguard-decisioner

# Risk thresholds
FINGUARD_BLOCK_THRESHOLD=80
FINGUARD_CHALLENGE_THRESHOLD=55

# Feature windows
FINGUARD_VELOCITY_WINDOW_SEC=60
FINGUARD_DEVICE_WINDOW_DAYS=90

# Oracle DB (update to your Oracle connection)
ORACLE_DSN=localhost/FREEPDB1
ORACLE_USER=CAPSTONE_BANK
ORACLE_PASSWORD=Capstone

# Table names (can be left as defaults)
FG_TBL_TRANSACTIONS=FG_TRANSACTIONS
FG_TBL_DECISIONS=FG_DECISIONS
FG_TBL_ALERTS=FG_ALERTS
FG_TBL_DEVICES_SEEN=FG_DEVICES
FG_TBL_MERCHANT_BLACKLIST=FG_BLACKLIST
FG_TBL_MODEL_VERSIONS=FG_MODEL_VERSIONS
FG_TBL_MODEL_SCORES=FG_MODEL_SCORES

# Optional LLM settings
# Set FINGUARD_LLM_ENABLED=1 and provide a provider API key to enable LLM calls
# Supported providers: mock, openai, gemini
FINGUARD_LLM_ENABLED=1
FINGUARD_LLM_PROVIDER=gemini
# Default model for provider; for Gemini set to 'gemini-flash' or your preferred model
FINGUARD_LLM_MODEL=gemini-1.5-flash
# If using OpenAI set OPENAI_API_KEY; if using Gemini set GOOGLE_API_KEY
OPENAI_API_KEY=
